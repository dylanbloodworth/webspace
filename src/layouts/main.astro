---
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style>
      .active-page,
      .active-page:hover {
        background-color: rgba(var(--lavender), 0.5);
      }

      li:hover {
        background-color: rgba(var(--lavender), 0.1);
      }
    </style></head
  >

  <body>
    <main class="py-2 flex flex-col md:flex-row">
      <nav class="flex justify-center text-center md:text-left">
        <ul class="md:p-4">
          <div class="mb-5">dylansWebSpace v0.1.0</div>
          <li><a class="p-1" href="/">home</a></li>
          <li><a class="p-1" href="/about/">about</a></li>
          <li><a class="p-1" href="/blog/">blog</a></li>
          <li><a class="p-1" href="/reading/">reading</a></li>
          <li><a class="p-1" href="/projects/">projects</a></li>
          <li>
            <a class="p-1" href="https://github.com/dylanbloodworth">github</a>
          </li>
        </ul>
      </nav>
      <slot />
      <script is:inline>
        const navLinks = document.querySelectorAll("nav a");
        const curPath = window.location.pathname;

        navLinks.forEach((link) => {
          if (link.getAttribute("href") == curPath) {
            link.parentElement.classList.add("active-page");
          }
        });
      </script>
    </main>
  </body>
</html>
